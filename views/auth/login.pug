extends ../includes/layouts.pug

block title
    title Login

block content
    .container
        section.section.register.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center.py-4
            .container
                .row.justify-content-center
                    .col-lg-4.col-md-6.d-flex.flex-column.align-items-center.justify-content-center
                        .d-flex.justify-content-center.py-4
                            a.logo.d-flex.align-items-center.w-auto(href='index.html')
                                img(src='/assets/img/logo.png' alt='')
                                span.d-none.d-lg-block NiceAdmin
                        // End Logo
                        .card.mb-3
                            .card-body
                                .pt-4.pb-2
                                    h5.card-title.text-center.pb-0.fs-4 Login to Your Account
                                    p.text-center.small Enter your username &amp; password to login
                                form.row.g-3.needs-validation(novalidate='')
                                    .col-12
                                        label.form-label(for='yourUsername') Username
                                        .input-group.has-validation
                                            span#inputGroupPrepend.input-group-text @
                                            input#yourUsername.form-control(type='text' name='username' required='')
                                            .invalid-feedback Please enter your username.
                                    .col-12
                                        label.form-label(for='yourPassword') Password
                                        input#yourPassword.form-control(type='password' name='password' required='')
                                        .invalid-feedback Please enter your password!
                                    .col-12
                                        .form-check
                                            input#rememberMe.form-check-input(type='checkbox' name='remember' value='true')
                                            label.form-check-label(for='rememberMe') Remember me
                                    .col-12
                                        button.btn.btn-primary.w-100(type='submit') Login
                                    .col-12
                                        p.small.mb-0
                                            | Don&apos;t have account?
                                            a(href='pages-register.html') Create an account
